<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Styles.Resources>
    <!-- Dracula (aka the friendly vampire). -->
    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#282A36"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#343746"/>
    <SolidColorBrush x:Key="PanelBorderBrush" Color="#44475A"/>

    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#282A36"/>
    <SolidColorBrush x:Key="HeaderForegroundBrush" Color="#F8F8F2"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F8F8F2"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#B2B2C6"/>
    <SolidColorBrush x:Key="TextFaintBrush" Color="#8A8AA3"/>

    <SolidColorBrush x:Key="AccentBrush" Color="#BD93F9"/>

    <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#3A3E52"/>
    <SolidColorBrush x:Key="ButtonBorderBrush" Color="#44475A"/>

    <SolidColorBrush x:Key="TextBoxBackgroundBrush" Color="#282A36"/>
    <SolidColorBrush x:Key="TextBoxBorderBrush" Color="#44475A"/>

    <SolidColorBrush x:Key="SplitterBrush" Color="#44475A"/>
  </Styles.Resources>

  <Style Selector="Window">
    <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}"/>
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style Selector="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style Selector="Button">
    <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorderBrush}"/>
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style Selector="TextBox">
    <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource TextBoxBorderBrush}"/>
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    <Setter Property="CaretBrush" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style Selector="ComboBox">
    <Setter Property="Background" Value="{DynamicResource TextBoxBackgroundBrush}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource TextBoxBorderBrush}"/>
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style Selector="TabControl">
    <Setter Property="Background" Value="{DynamicResource AppBackgroundBrush}"/>
  </Style>

  <Style Selector="TabItem">
    <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
  </Style>

  <Style Selector="GridSplitter">
    <Setter Property="Background" Value="{DynamicResource SplitterBrush}"/>
  </Style>
</Styles>
